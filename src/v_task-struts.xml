<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <package name="edu.jt.exg.action.v_task" namespace="/" extends="struts-default">
    	<global-results>
		    <result name="exception">/edu/jt/exg/error.jsp</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception" result="exception"/>
		</global-exception-mappings>
        <action name="V_taskAction" class="edu.jt.exg.action.V_taskAction">
        	<!-- 插入、更新跳转 -->
        	<result name="toinitquery" type="redirectAction">
     			<param name="actionName">V_taskAction</param>
     			<param name="namespace">/</param>
     			<param name="action">${action}</param>
  			</result>
            <result name="initcreate">/edu/jt/exg/v_task/V_taskCreate.jsp</result>
            <result name="initupdate">/edu/jt/exg/v_task/V_taskUpdate.jsp</result>
            <result name="initmultiquery">/edu/jt/exg/v_task/V_taskQueryMultiPopup.jsp</result>
            <result name="initsinglequery">/edu/jt/exg/v_task/V_taskQuerySinglePopup.jsp</result>
            <result name="initquery">/edu/jt/exg/v_task/V_taskQuery.jsp</result>
            <result name="multiquery">/edu/jt/exg/v_task/V_taskQueryMultiPopup.jsp</result>
            <result name="singlequery">/edu/jt/exg/v_task/V_taskQuerySinglePopup.jsp</result>
            <result name="query">/edu/jt/exg/v_task/V_taskQuery.jsp</result>
            <result name="detail">/edu/jt/exg/v_task/V_taskDetail.jsp</result>
            <param name="action">${action}</param>
            <param name="v_task_id">${v_task_id}</param>
            <param name="export">${export}</param>
            <param name="scope">${scope}</param>
           	<!-- 局部异常映射 -->
            <exception-mapping result="nullPoint" exception="java.lang.Exception"></exception-mapping>   
            <result name="nullPoint">/edu/jt/exg/error.jsp</result>
        </action>
    </package>
</struts>