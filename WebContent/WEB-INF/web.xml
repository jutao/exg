<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>jutao</display-name>
	<servlet>
	  <description>其他初始化设置</description>
	  <display-name>InitOtherConfigServlet</display-name>
	  <servlet-name>InitOtherConfigServlet</servlet-name>
	  <servlet-class>servlet.InitOtherConfigServlet</servlet-class>
	  <init-param>
	    <description>显示列截流</description>
	    <param-name>SPLIT_COLUMN_LENGTH</param-name>
	    <param-value>20</param-value>
	  </init-param>
	  <init-param>
	    <description>项目jsp部署的物理路径</description>
	    <param-name>PHYSICAL_PATH</param-name>
	    <param-value>C:/apache-tomcat-8.0.11-windows-x64/webapps/exg/edu\jt\exg</param-value>
	  </init-param>
	  <init-param>
	    <description>临时文件夹</description>
	    <param-name>TMP_FILE</param-name>
	    <param-value>export</param-value>
	  </init-param>
	  <load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
	  <description>初始化数据库参数及释放连接工厂</description>
	  <display-name>InitDatabaseConfigServlet</display-name>
	  <servlet-name>InitDatabaseConfigServlet</servlet-name>
	  <servlet-class>servlet.InitDatabaseConfigServlet</servlet-class>
	  <init-param>
	     <description>数据库所有者</description>
	     <param-name>DATABASE_OWNER</param-name>
	     <param-value>exg</param-value>
	   </init-param>
	   <init-param>
	     <description>数据库</description>
	     <param-name>DATABASE</param-name>
	     <param-value>MYSQL</param-value>
	   </init-param>
	   <init-param>
	     <description>分页范围</description>
	     <param-name>REFERENCE_RANGE</param-name>
	     <param-value>10</param-value>
	   </init-param>
	   <load-on-startup>2</load-on-startup>
	</servlet>
	<servlet>
	  <description>初始化随机验证图片设置</description>
	  <display-name>InitRandomPicConfigServlet</display-name>
	  <servlet-name>InitRandomPicConfigServlet</servlet-name>
	  <servlet-class>servlet.InitRandomPicConfigServlet</servlet-class>
	  <init-param>
	    <description>验证图片大小</description>
	    <param-name>VERIFY_PIC_SIZE</param-name>
	    <param-value>80,20</param-value>
	  </init-param>
	  <init-param>
	    <description>图片验证填充色RGB</description>
	    <param-name>VERIFY_PIC_BACKGROUND</param-name>
	    <param-value>255,255,255</param-value>
	  </init-param>
	  <init-param>
	    <description>图片验证笔刷颜色RGB</description>
	    <param-name>VERIFY_PIC_BRUSH</param-name>
	    <param-value>0,0,0</param-value>
	  </init-param>
	  <init-param>
	    <description>图片验证字体</description>
	    <param-name>VERIFY_PIC_FONT</param-name>
	    <param-value>Times New Roman Bold</param-value>
	  </init-param>
	  <init-param>
	    <description>图片验证字体大小</description>
	    <param-name>VERIFY_PIC_FONT_SIZE</param-name>
	    <param-value>20</param-value>
	  </init-param>
	  <init-param>
	    <description>图片验证随机字母(中文必须设置中文字体)</description>
	    <param-name>VERIFY_PIC_RANDOM_ALPHA</param-name>
	    <param-value>0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ</param-value>
	  </init-param>
	  <init-param>
	    <description>图片验证字符长度</description>
	    <param-name>VERIFY_PIC_LENGTH</param-name>
	    <param-value>5</param-value>
	  </init-param>
	  <load-on-startup>2</load-on-startup>
	</servlet>
	<servlet>
	    <display-name>ValidationServlet</display-name>
	    <servlet-name>ValidationServlet</servlet-name>
	    <servlet-class>servlet.ValidationServlet</servlet-class>
	</servlet>
	<servlet>
	    <servlet-name>VerifyImgServlet</servlet-name>
	    <servlet-class>servlet.VerifyImgServlet</servlet-class>
	</servlet>
	<servlet>  
	    <servlet-name>CXFServlet</servlet-name>  
	    <servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>  
	</servlet>  
	<servlet-mapping>  
	    <servlet-name>CXFServlet</servlet-name>  
	    <url-pattern>/service/*</url-pattern>  
	</servlet-mapping>  
	<servlet-mapping>
	   <servlet-name>InitOtherConfigServlet</servlet-name>
	   <url-pattern>/servlet/InitOtherConfigServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>InitDatabaseConfigServlet</servlet-name>
	   <url-pattern>/servlet/InitDatabaseConfigServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	   <servlet-name>InitRandomPicConfigServlet</servlet-name>
	   <url-pattern>/servlet/InitRandomPicConfigServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>ValidationServlet</servlet-name>
	    <url-pattern>/ValidationServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
	    <servlet-name>VerifyImgServlet</servlet-name>
	    <url-pattern>/VerifyImgServlet</url-pattern>
	</servlet-mapping>
	 <filter>
	 	<filter-name>struts2</filter-name>
	 	<filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
	 </filter>
	 
	 <!--struts2清理action上下文变量-->
	<filter>
	    <filter-name>struts2CleanupFilter</filter-name>
	    <filter-class>org.apache.struts2.dispatcher.ActionContextCleanUp</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>struts2CleanupFilter</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>
	<filter>
	    <filter-name>checkLogin</filter-name>
	    <filter-class>filter.LoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>checkLogin</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
  		<filter-name>struts2</filter-name>
  		<url-pattern>*.action</url-pattern>
 	</filter-mapping>
 	<filter-mapping>
  		<filter-name>struts2</filter-name>
  		<url-pattern>*.jsp</url-pattern>
 	</filter-mapping>
	<filter-mapping>
  		<filter-name>struts2</filter-name>
  		<url-pattern>/struts/*</url-pattern>
 	</filter-mapping>
 	<filter>
		<filter-name>CorsFilter</filter-name>
		<filter-class>org.apache.catalina.filters.CorsFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CorsFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener> 
        <listener-class> 
            org.springframework.web.context.ContextLoaderListener
        </listener-class> 
    </listener>
    <!-- Spring 刷新Introspector防止内存泄露 -->
	<listener>
	   <listener-class>org.springframework.web.util.IntrospectorCleanupListener
	   </listener-class>
	</listener>
  <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath*:threadpool.xml
            classpath*:service-beans.xml
        </param-value>
    </context-param>
    <welcome-file-list>
	<welcome-file>index.jsp</welcome-file>
	<welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>-1</session-timeout>
    </session-config>
    <mime-mapping>
 	<extension>rar</extension>
        <mime-type>application/rar</mime-type>
    </mime-mapping>
    
    
     <servlet>   
	  <servlet-name>AjaxServlet</servlet-name>  
	  <servlet-class>edu.jt.exg.servlet.AjaxServlet</servlet-class>  
	</servlet>  
	<servlet-mapping>  
	  <servlet-name>AjaxServlet</servlet-name>  
	  <url-pattern>/AjaxServlet</url-pattern>  
	</servlet-mapping>  
</web-app>